{
  "name": "nftauto-desktop",
  "productName": "NFTauto Desktop v2.0.1",
  "version": "1.0.0",
  "description": "NFTauto Desktop v2.0.1",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "package-win": "rm -rf dist installer && electron-packager . --overwrite --out='dist' --icon=./src/assets/img/icon.ico",
    "create-installer-win": "node build_installer.js",
    "package-mac": "electron-packager . --overwrite --asar --platform=darwin --arch=x64 --out=dist",
    "create-installer-mac": "electron-installer-dmg ./dist/NFTauto\\ Desktop-darwin-x64/NFTauto\\ Desktop.app NFTauto-Desktop --out=dist --overwrite"
  },
  "author": {
    "name": "shovity",
    "email": "shovity@gmail.com"
  },
  "private": "true",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "nftauto_desktop"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@datastructures-js/priority-queue": "^5.3.0",
    "axios": "^0.21.1",
    "electron-settings": "^4.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "eosjs-ecc": "^4.0.7",
    "form-data": "^4.0.0",
    "https-proxy-agent": "^5.0.0",
    "md5": "^2.3.0",
    "node-fetch": "^1.7.3",
    "priorityqueuejs": "^2.0.0",
    "qs": "^6.10.1",
    "query-string": "^7.0.1",
    "socket.io-client": "^2.2.0",
    "steem": "git+https://github.com/vansi99/steem-js.git",
    "ws": "^3.3.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@hiveio/keychain": "^1.0.4",
    "electron": "15.1.2",
    "electron-installer-dmg": "^3.0.0",
    "electron-wix-msi": "2.1.1"
  }
}
